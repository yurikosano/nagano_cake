<div class="row">
  <div class="offset-3 col-2">
    <h2>新規会員登録</h2>
  </div>
  <div class="offset-4 col-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group">
    <label for="name">お名前</label><br />
      <%= f.label :（姓） %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
      <%= f.label :（名） %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
    <label for="kana">フリガナ</label><br />
      <%= f.label :（セイ） %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
      <%= f.label :（メイ） %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :電話番号（ハイフンなし） %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :パスワード（6文字以上） %>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
    </div>
    <div class="form-group">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "登録する",class: "btn btn-success" %>
    </div>
  <% end %>
  <h4>既に登録済みの方</h4>

  <%= link_to "こちら", new_customer_session_path %>
  <span> からログインしてください。</span>

  <p id="notice"><%= notice %></p>
  </div>
</div>