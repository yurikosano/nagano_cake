<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">ご注文内容</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="offset-1 col-7">
      <table class="table table-borderless table-sm ">
        <thead>
          <tr class="red-border">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.cart_items.each do |cart_item| %>
            <tr class="brown-border">
              <td>
               <% if cart_item.item.image.attached? %>
                 <%= image_tag cart_item.item.image, size: "200x140" %>
               <% else %>
                 <%= image_tag 'no_image', size: "200x140" %>
               <% end %>
                <span> </span>
                <%= cart_item.item.name %>
              </td>
              <td class="align-middle"><%= (cart_item.item.price * 1.1).floor %></td>
              <td class="align-middle"><%= cart_item.amount %></td>
              <td class="align-middle"><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-2 d-flex">
      <table class="table table-sm table-borderless align-self-end">
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
        <% @sum += cart_item.item.price * cart_item.amount %>
      <% end %>
        <tbody>
          <tr class="brown-border">
            <td>送料</td>
            <td>800</td>
          </tr>
          <tr class="brown-border">
            <td>商品合計</td>
            <td><%= (@sum * 1.1).floor %></td>
          </tr>
          <tr class="brown-border">
            <td>請求金額</td>
            <td><%= ((@sum * 1.1) + 800).floor %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="offset-2 col-6">
      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">お支払い方法</strong>
        <%= form_with model: @order do |f| %>
        <span class="brown-border px-3"><%= @order.payment_method %></span>
      </div>
      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">　お届け先　</strong>
        <span class="brown-border px-3">
          <%# if  session[:address].length < 8 %>
           <%= "〒" + @order.shipping_post_code.to_s + "  " + @order.shipping_adress + "  " + @order.shipping_name %><span>様</span>
          <%#else %>
            <%#= session[:address] %>
          <%# end %>
        </span>
      </div>
    </div>
    <div class="col-3">
      <%=link_to "購入を確定する", orders_create_order_path, class: "btn btn-lg btn-danger ml-auto" %>
    </div>
    <% end %>
  </div>
</div>