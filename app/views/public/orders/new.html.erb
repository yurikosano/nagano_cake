<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <%= flash[:order_new] %>
      <h2 class="red-border px-3">購入情報入力</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="offset-2 col-5">
      <div class="row">
        <strong class="red-border px-3">
          お支払い方法
        </strong>
      </div>
      <%= form_tag(orders_path, method: :post) do %>
        <div class="form-check mt-3">
          <%= radio_button_tag :payment, :クレジットカード %>
          <%= label_tag :payment, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %>
          <%= radio_button_tag :payment, :銀行振込 %>
          <%= label_tag :payment, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>
        <div class="row mt-3">
          <strong class="red border px-3">
            お届け先
          </strong>
        </div>
        <div class="form-check mt-3">
          <%= radio_button_tag :select, :my_address %>
          <%= label_tag :select, "ご自身の住所", {value: :"my_address", style: "display: :inline-block;"} %>
          <br />
          <%= address = "〒" + current_customer.postal_code + current_customer.address %>
          <br />
          <%= address = current_customer.first_name + current_customer.last_name %>
          <br />
          <%= radio_button_tag :select, :select_address %>
          <%= select_tag :address_id, options_from_collection_for_select(current_customer.addresses, :id, :name, :address_display) %>
          <%= address %>
        </div>
        <div class="row mt-5">
          <%= submit_tag "確認画面へ進む", class: "btn btn-outline-danger ml-auto" %>
        </div>
        <% end %>
      <br />
    </div>
    <div class="offset-2 col-5">
      <di class="row">
        <strong class="red border px-3">新しいお届け先を登録する</strong>
      </div>
      <div class="offset-2 col-5">
        <div class="row">
          <%= form_with model: @address, url: addresses_path do |f| %>
          <div class="form-group row mt-3">
            <%= f.text_field :potal_code, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
          </div>
          <div class="form-group row">
            <%= f.text_field :address, placeholder: "住所", class: "form-control offset-1 col-10" %>
          </div>
          <div class="form-group row">
            <%= f.text_field :last_name, placeholder: "姓", class: "form-control offset-1 col-5" %>
            <%= f.text_field :first_name, placeholder: "名", class: "form-control offset-1 col-5" %>
          </div>
          <div class="row">
            <%= f.submit "新規登録", class: "btn btn-md btn-outline-danger ml-auto" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
