<div class="row login-row">
  <div class="body">
    <div class="container">
      <h2>登録情報編集</h2>
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.label :first_name, "(姓)" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
          <%= f.label :last_name, "(名)" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :フリガナ %><br />
          <%= f.label :first_name_kana, "(セイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
          <%= f.label :last_name_kana, "(メイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
        </div>
        <br />
        <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
      <% end %>
      <br />
        <%= link_to "退会する", unsubscribe_customer_path(@customer.id), class: "btn btn-danger withdrawal_page_btn" %>
    </div>
  </div>
</div>