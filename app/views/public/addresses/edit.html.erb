<div class="row">
  <div class="col-lg-6">
    <h2>配送先編集</h2>
    <%= form_with model:@address, url: public_addresses_path(@address.id), method: :patch do |f| %>
     <div class="field">
       <%= f.label :郵便番号(ハイフンなし) %>
       <%= f.text_field :postal_code, class: "form" %>
     </div>
     <div class="field">
       <%= f.label :住所 %>
       <%= f.text_area :address, :size => "60x10" %>
     </div>  
     <div class="field">
       <%= f.label :宛名 %>
       <%= f.text_field :name, class: "form" %>
     </div>
     <div class="actions-row">
       <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
    <% end %>
  </div>
</div>
