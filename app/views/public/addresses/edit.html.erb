<div class="row">
  <div class="col-lg-6">
    <h2>配送先編集</h2>
    <%= form_with model:@address, url: address_path(@address.id),　method: :patch do |f| %>
     <div class="field">
       <%= f.label :郵便番号（ハイフンなし） %><br />
       <%= f.text_field :potal_code, class: "form" %>
     </div>
     <div class="field">
       <%= f.label :住所 %><br />
       <%= f.text_field :address, :size => "60x10" %>
     </div>
     <div class="field">
       <%= f.label :宛名 %><br />
       <%= f.text_field :name, class: "form" %>
     </div>
     <br />
     <div class="actions-row">
       <%= f.submit "変更する", class: "btn btn-success" %>
     </div>
    <% end %>
  </div>
</div>
