<div class="row">
  <div class="col-lg-6">
    <h2>配送先登録／一覧</h2>
    <%= form_with model :@address do |f| %>
     <div class="field">
       <%= f.label :郵便番号(ハイフンなし) %>
       <%= f.text_field :postal_code, class: "form" %>
     </div>
     <div class="field">
       <%= f.label :住所 %>
       <%= f.text_area :address, :size => "60x10" %>
     </div>  
     <div class="field">
       <%= f.label :宛名 %>
       <%= f.text_field :name, class: "form" %>
     </div>
     <div class="actions-row">
       <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
    <% end %>
    <table class="table">
    <% @address.each do |address| %>
      <tr>
        <th>郵便番号</th>
        <td><%= @address.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @address.address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= @address.name %></td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= link_to "編集する", edit_public_address_path(@address.id), class: "btn btn-success" %>
          <%= link_to "削除する", destory_public_address_path(@address.id), method: :delete, "deta-confirm" => "本当に削除しますか？" class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
