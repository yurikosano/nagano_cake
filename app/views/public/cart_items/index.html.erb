<div class="row login-row">
  <h2>ショッピングカート</h2>
  <%= button_to "カートを空にする", @cart_item, method: :delete, deta: {confirm: "カートを空にしてよろしいですか？"}, class: "btn btn-danger destroy-all" %>
  <div class="row">
    <table class="table table-bordered cart_table">
      <thread class="thread-light">
        <tr style="background-color:#F5F5F5;">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="1"></th>
        </tr>
      </thread>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, image, size: "50x50", fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.price * 1.1).floor %>
          </td>
          <td>
            <%= form_with model:@cart_item, url: cart_item_path(@cart_item.id), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, min: 1, max: 50 %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <%= (cart_item.item.price * 1.1).floor * cart_item.quantity %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(@cart_item.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table table-borderd">
      <tr>
        <th>合計金額</th>
        <td><%= @total_price %>円</td>
      </tr>
    </table>
  </div>
  <div>
    <%= link_to "買い物を続ける", items_path, class: "btn btn-success go-to-order" %>
    <% if @cart_items != [] %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success go-to-order" %>
    <% end %>
  </div>
</div>
