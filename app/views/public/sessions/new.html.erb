<div class="row">
  <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <br />
    <span>会員の方はこちらからログインしてください。</span>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
<div class="row">
  <h4>会員登録がお済みでない方</h4><br />
    <%= link_to "こちら", new_customer_registration_path %><span> からログインしてください。</span>
  <p id="notice"><%= notice %></p>
</div>
