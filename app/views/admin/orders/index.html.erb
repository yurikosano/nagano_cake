<div class="container">
  <div class="row">
    <div class="center-block">
      <h2>注文履歴一覧</h2>
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <!--<th>注文ステータス</th>-->
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_detail_path(order.id) %></td>
            <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td>
              <% sum = 0 %>
              <% @order_details.each do |order_detail| %>
                <%= order_detail.item.amount %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


