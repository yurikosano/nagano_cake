<div class="container">
  <div class="row">
    <div class="center-block">
      <h2>
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
      </h2>
      <div class="col-12">
        <table class="table">
          <tr>
            <th>会員id</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td>
              <%= @customer.first_name %><%= @customer.last_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
            <tr>
            <th>会員ステータス</th>
              <th>
                <% if @customer.is_active == true %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="text-danger">退会</strong>
                <% end %>
              </th>
          </tr>
        </table>
        <div>
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
          <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
