<div class="container">
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
      <div class="col-xs-7">
        <div class="field">
          <%= f.label :"会員id" %>
          <%= @customer.id %>
        </div>
        <div class="field">
          <%= f.label :"氏名" %><br />
          <%= f.text_field :first_name, class: "form" %>
          <%= f.text_field :last_name, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"フリガナ" %><br />
          <%= f.text_field :first_name_kana, class: "form" %>
          <%= f.text_field :last_name_kana, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"郵便番号" %><br />
          <%= f.text_field :postal_code, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"住所" %><br />
          <%= f.text_area :address, class: "form" %>
        </div>
          <div class="field">
          <%= f.label :"電話番号" %><br />
          <%= f.text_field :telephone_number, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.text_field :email, class: "form" %>
        </div>
          <div class="field">
          <%= f.label :"会員ステータス" %><br />
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", {value: :"0", style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会", {value: :"0", style: "display: inline-block;"} %>
        </div>
        <div class="actions-row">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>