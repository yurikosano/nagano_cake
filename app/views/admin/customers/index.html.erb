<div class="container">
  <div class="row">
    <div class="center-block">
      <h2>会員一覧</h2>
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>会員id</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.first_name, admin_customer_path(@customer.id) %>
              <%= link_to customer.last_name, admin_customer_path(@customer.id) %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == nil %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

