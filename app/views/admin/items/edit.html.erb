<div class="container">
  <div class="row">
    <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <h2>商品編集</h2>
      <div class="col-xs-5">
        <div class="field">
          <%= f.label :"商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="col-xs-7">
        <div class="field">
          <%= f.label :"商品名" %>
          <%= f.text_field :name, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"商品説明" %>
          <%= f.text_area :introduction, class: "form" %>
        </div>
        <div class="field">
          <%= f.label :"ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
        </div>
        <div class="field">
          <%= f.label :"税抜価格" %>
          <%= f.text_field :price, class: "form" %>
        </div>
        <div class="actions-row">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
