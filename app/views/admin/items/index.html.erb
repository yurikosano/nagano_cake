<div class="container">
  <div class="row">
    <div class="center-block">
      <h2>商品一覧</h2>
      <%= link_to "商品追加", new_admin_item_path, class: "btn btn-primary" %>
      <br />
      <br />
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>商品id</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
               <% if item.is_active == true %>
                  <strong class="text-success">販売中</strong>
                <% else %>
                  <strong class="text-danger">販売停止中</strong>
                <% end %>
            </td>
          </tr>
          <% end %>
          <%= paginate @items %>
        </tbody>
      </table>
    </div>
  </div>
</div>
