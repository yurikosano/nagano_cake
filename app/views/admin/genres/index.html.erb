<div class="container">
  <div class="row">
    <div class="col">
      <h4>ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: '/admin/genres' do |f| %>
      <br />
        <div class="form-group">
          <label for="genre_name">ジャンル</label>
          <%= f.text_field :name %>
          <%= f.submit'新規追加', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <br />
      <br />
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-board">
        <thred>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thread>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
