<div class="container">
  <div class="row">
    <div class="col-8">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: "/admin/genres/#{@genre.id}", method: :patch do |f| %>
      <br />
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
